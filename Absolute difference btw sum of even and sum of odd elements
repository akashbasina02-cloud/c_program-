#include<stdio.h>
#include<stdlib.h>   // for abs() function

int main() {
    int n, i;
    int evenSum = 0, oddSum = 0;

    scanf("%d", &n);   // read array size

    int arr[n];

    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);   // read array elements
    }

    for(i = 0; i < n; i++) {
        if(arr[i] % 2 == 0) {
            evenSum += arr[i];   // add even elements
        } else {
            oddSum += arr[i];    // add odd elements
        }
    }

    // calculate absolute difference
    int result = abs(evenSum - oddSum);

    printf("%d", result);

    return 0;
}
