#include <stdio.h>

int main() {
    int n;
    
    // Read size of array
    scanf("%d", &n);
    
    int arr[n];
    
    // Read array elements
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    int count = 0;
    
    // Loop from 1 to n-2 (check only middle elements)
    for(int i = 1; i < n - 1; i++) {
        
        // Check if left is even and right is odd
        if ((arr[i-1] % 2 == 0 && arr[i+1] % 2 != 0) ||
            
            // OR left is odd and right is even
            (arr[i-1] % 2 != 0 && arr[i+1] % 2 == 0)) {
                
            count++;   // Increase count
        }
    }
    
    // Print result
    printf("%d", count);
    
    return 0;
}
