#include <stdio.h>

int main() {
    int n;
    
    // Read array size
    scanf("%d", &n);
    
    int arr[n];
    
    // Read array elements
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    int count = 0;
    
    // Check from index 1 to n-2
    for(int i = 1; i < n - 1; i++) {
        
        // Check if current is even and neighbors are odd
        if(arr[i] % 2 == 0 &&
           arr[i-1] % 2 != 0 &&
           arr[i+1] % 2 != 0) {
            
            count++;   // Increase count
        }
    }
    
    // Print result
    printf("%d", count);
    
    return 0;
}
