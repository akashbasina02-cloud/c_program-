#include <stdio.h>

int main() {
    
    int n;   // Variable to store size of array
    scanf("%d", &n);   // Read array size
    
    int arr[n];   // Declare array of size n
    
    // Read array elements
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    // Traverse from last index to first
    for(int i = n - 1; i >= 0; i--) {
        
        // Check if element is even
        if(arr[i] % 2 == 0) {
            
            printf("%d", i);   // Print index position
            break;             // Stop after finding last even
        }
    }
    
    return 0;   // End of program
}
