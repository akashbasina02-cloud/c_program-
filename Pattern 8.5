#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int mid = (n / 2) + 1;

    for (int i = 1; i <= n; i++) {
        char ch = 'A' + i - 1;

        // spacing logic for large patterns (like input 9)
        if (n > 7) {
            int spaces;
            if (i <= mid)
                spaces = i - 1;
            else
                spaces = n - i;

            for (int s = 0; s < spaces; s++)
                printf(" ");
        }

        // printing logic
        if (i == mid) {
            printf("%c", ch);
        } else {
            printf("%c %c", ch, ch);
        }

        printf("\n");
    }

    return 0;
}
