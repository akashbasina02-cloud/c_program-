#include <stdio.h>

int searchInsert(int arr[], int N, int T) {
    int low = 0, high = N - 1;

    while (low <= high) {
        int mid = low + (high - low) / 2;

        if (arr[mid] == T) {
            return mid;              // If found
        }
        else if (arr[mid] < T) {
            low = mid + 1;           // Search right half
        }
        else {
            high = mid - 1;          // Search left half
        }
    }

    return low;  // Insert position if not found
}

int main() {
    int Q;
    scanf("%d", &Q);   // Number of test cases

    while (Q--) {
        int N, T;
        scanf("%d %d", &N, &T);

        int arr[N];

        for (int i = 0; i < N; i++) {
            scanf("%d", &arr[i]);
        }

        printf("%d\n", searchInsert(arr, N, T));
    }

    return 0;
}
