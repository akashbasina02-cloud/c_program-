#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);   // Read input N

    // Loop for rows
    for (int i = 1; i <= n; i++) {

        // Loop for columns
        for (int j = 1; j <= n; j++) {

            // If row number is odd, print 1
            if (i % 2 == 1)
                printf("1 ");
            else
                // If row number is even, print 0
                printf("0 ");
        }

        // Move to next line after each row
        printf("\n");
    }

    return 0;
}
